{% block virtualSelect_widget %}
    {% apply spaceless %}
{#        {{ dump(form) }}#}
        <div class="virtual_select_filter" data-name="{{ form.vars.name }}" id="{{ form.vars.id }}"></div>
    {% endapply %}
    <script>
      window.addEventListener('load', function() {
        VirtualSelect.init({
                             ele:     '#{{ form.vars.id }}',
                             name:    '{{ form.vars.full_name }}',
                             search:  true,
                             placeholder: '{{ form.vars.placeholder }}',
                             selectedValue: '{{ form.vars.value }}',
                             options: [
                               {label: 'Options 1Options 1Options 1', value: '1'},
                               {label: 'Options 2', value: '2'},
                               {label: 'Options 3', value: '3'},
                               {label: 'Options 7', value: '7'},
                             ],
                           });
      });
    </script>
{% endblock %}