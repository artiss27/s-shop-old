

<div class="card-header py-3">
    <div class="d-flex justify-content-between align-items-center">
        <h3 class="m-0 font-weight-bold">{{ sectionTitle }}</h3>

        {% if (filter is defined) %}
            <div data-mdb-toggle="tooltip" title="Show/Hide filters">
                <button class="btn btn-sm btn-info" type="button" data-mdb-toggle="collapse" data-mdb-target="#filterTable" aria-expanded="false" aria-controls="filterTable">
                    <i class="fas fa-filter"></i>
                </button>
            </div>
        {% endif %}

        {% if (addUrl is defined) %}
        <a href="{{ addUrl }}" class="d-inline-block btn btn-sm btn-success">
            <i class="fas fa-plus fa-sm text-white-50"></i> Add new
        </a>
        {% endif %}

    </div>
</div>

{% if (filter is defined) %}
    {% include 'admin/_embed/_filters/_filter.html.twig' with { 'filter': filter } %}
{% endif %}
